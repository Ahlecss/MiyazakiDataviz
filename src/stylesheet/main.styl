html, body {
    height: 100%;
    width: 100%;
    font-size: 100%;
    font-family: 'Montserrat', sans-serif;
    font-weight: 100;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  overflow: hidden;
}

:root {
  --app-height: 100%;
}

html {
  overflow: hidden;
}

html,body {
  overflow: hidden;
  user-select: none;
  * {
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-tap-highlight-color: transparent;
  }
}

body {
  padding: 0;
  margin: 0;
  height: 100vh;
  width: 100%;
  position: fixed;
  @media not all and (hover:hover) {
    height: var(--app-height);
  }
}

